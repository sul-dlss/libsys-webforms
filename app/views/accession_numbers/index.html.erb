<% content_for :javascript_includes do %>
  <%= javascript_include_tag "accession_numbers.js" %>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Accession Numbers</h1>
<%= link_to 'New accession number', new_accession_number_path, class: 'btn btn-default' %>
<div class="btn-group" >
<%= accession_menu_button %>
</div>
<p>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Resource type</th>
      <th>Type of material</th>
      <th>Location</th>
      <th>Prefix</th>
      <th>Seq num</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accession_numbers.each do |accession_number| %>
      <tr class='<%= cycle("odd", "even") %>'>
        <td><%= accession_number.resource_type %></td>
        <td><%= accession_number.item_type %></td>
        <td><%= accession_number.location %></td>
        <td><%= accession_number.prefix %></td>
        <td><%= accession_number.seq_num.to_i %></td>
        <td><%= link_to 'Edit', edit_accession_number_path(accession_number.id), class: 'btn btn-xs btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-group">
  <%= accession_menu_button %>
</div>

<br>
