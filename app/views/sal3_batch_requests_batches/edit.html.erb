<h2>SAL3 Batch Request</h2>
<%= form_for @sal3_batch_requests_batch, class: 'form-group' do |f| %>
<% if @sal3_batch_requests_batch.errors.any? %>
<div id="error-explanation">
  <ul>
    <% @sal3_batch_requests_batch.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div>
  <div class="panel-group" id="media_group">
    <div class='form-group row'>
      <%= f.label :status, "Status", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.select :status, Sal3BatchRequestsBatch.status, {}, {size: 4, class: 'form-control'} %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :status, "Priority", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.select :priority, Sal3BatchRequestsBatch.priority, {}, {size: 3, class: 'form-control'} %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label :batch_numpullperday, "Items to pull per day", class: 'col-sm-2 form-control-label' %>
      <div class='col-sm-10'>
        <%= f.text_field :batch_numpullperday %>
      </div>
    </div>
  </div>
  <div><%= f.submit 'Submit edit', class: 'btn' %></div><br/>
</div>
<% end %>
<div class="btn-group">
  <%= main_menu_button %>
</div>
